<h1>User#new</h1>
<p>Find me in app/views/user/new.html.erb</p>

<% if @user.errors.full_messages.any? %>
	<% @user.errors.full_messages.each do |message| %>
 	 	<%= message %>
	<% end %>
<% end %>


<%= form_for @user, :url => { :action => "create" } do |f| %>
  First Name: <%= f.text_field :fn %><br>
  Last Name: <%= f.text_field :ln %><br>
  Email: <%= f.text_field :email %><br>
  City: <%= f.text_field :city %><br>
  State: <%= f.text_field :state %><br>
  Password: <%= f.password_field :password %><br>
  Confirm PW: <%= f.password_field :password_confirmation %><br>
  <%= f.submit 'Register' %><hr>
<% end %>

<%= form_for @user, :url => { :action => "login" } do |f| %>
  Email: <%= f.text_field :email %><br>
  Password: <%= f.password_field :password %><br>
  <%= f.submit 'Login' %><hr>
<% end %>
